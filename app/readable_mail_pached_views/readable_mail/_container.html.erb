<%#
  メールのコンテナタグ
%>
<% border_top ||= false %>
<div style="
  margin-bottom: 8px;
  box-shadow:
    0px 0px 2px 0px rgba(0,0,0,0.12),
    0px 2px 2px 0px rgba(0,0,0,0.24);
  color: #333;
  background-color: #fff;
">
  <% if border_top %>
    <div style="
      padding-top: 5px;
      background-image: linear-gradient(to left, #0000cd, #000098);
      "></div>
  <% end %>

  <div style="padding: 10px 10px;">
    <%= yield %>
  </div>
</div>

